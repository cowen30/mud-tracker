<h1>Events</h1>

<% if logged_in? %>
<div class="row pt-3">
    <div class="col-8 col-sm-6 col-md-5 col-lg-4 mx-auto">
        <%= button_tag 'New Event',
            type: 'button',
            class: 'btn btn-primary btn-lg col-12',
            data: {
                bs_toggle: 'modal',
                bs_target: '#createEventModal'
            } %>
    </div>
</div>
<% end %>

<div class="row pt-3">
    <div class="col-12 col-md-8 mx-auto">
        <table class="table table-striped table-hover data-table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Location</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% @events.each do |event| %>
                <tr class="table-row clickable-row" data-href="<%= event_path(event) %>">
                    <td><%= event.name %></td>
                    <td><%= "#{event.city}, #{event.state}" %>
                    <td data-sort="<%= event.date.strftime('%Y%m%d') %>"><%= event.date.nil? ? '' : event.date.strftime('%b %-d, %Y') %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<% if logged_in? %>
<!-- Create Event Modal -->
<div class="modal fade" id="createEventModal" tabindex="-1" role="dialog" aria-labelledby="createEventModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_with model: Event.new do |form| %>
                <div class="modal-header">
                    <h5 class="modal-title" id="createEventModalLabel">Create New Event</h5>
                    <%= dismiss_modal_tag %>
                </div>
                <div class="modal-body">
                    <div class="row pt-2 gx-2 gy-3">
                        <div class="col-12">
                          <%= form.collection_radio_buttons :brand_id, Brand.order(:id), :id, :name do |b| %>
                            <div class="form-check form-check-inline">
                                <%= b.radio_button class: 'form-check-input' %>
                                <%= b.label class: 'form-check-label' %>
                            </div>
                          <% end %>
                        </div>
                        <div class="col-12">
                            <%= form.label :name, 'Event Name', { class: 'form-label' } %>
                            <%= form.text_field :name, { class: 'form-control' } %>
                        </div>
                        <div class="col-12">
                            <%= form.label :address, 'Address', { class: 'form-label' } %>
                            <%= form.text_field :address, { class: 'form-control' } %>
                        </div>
                        <div class="col-6">
                            <%= form.label :city, 'City', { class: 'form-label' } %>
                            <%= form.text_field :city, { class: 'form-control' } %>
                        </div>
                        <div class="col-3">
                            <%= form.label :state, 'State', { class: 'form-label' } %>
                            <%= form.select :state, Rails.configuration.state_list, { prompt: 'Select...' }, { class: 'form-select' } %>
                        </div>
                        <div class="col-3">
                            <%= form.label :country, 'Country', { class: 'form-label' } %>
                            <%= form.select :country, Rails.configuration.country_list, { prompt: 'Select...' }, { class: 'form-select' } %>
                        </div>
                        <div class="col-6">
                            <%= form.label :date, 'Date', { class: 'form-label' } %>
                            <%= form.date_field :date, { class: 'form-control' } %>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <%= form.submit 'Create', :class => 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<% end %>
