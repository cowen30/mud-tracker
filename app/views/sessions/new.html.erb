<div class="row justify-content-center align-items-center">        
    <div class="col-12 col-md-6 col-lg-4">
        <%= form_tag '/login' do %>
            <div class="row pt-2 gy-3">
                <div class="col-12">
                    <div class="form-floating required">
                        <%= text_field_tag :username, nil, class: 'form-control' %>
                        <%= label_tag :username %>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating required">
                        <%= password_field_tag :password, nil, class: 'form-control' %>
                        <%= label_tag :password %>
                    </div>
                </div>
                <div class="col-12">
                    <%= submit_tag 'Login', class: 'btn btn-primary btn-lg w-100' %>
                </div>
            </div>
        <% end %>
        <%= link_to 'Create an account', '/welcome' %>
    </div>
</div>
