<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover data-table-custom">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr class="table-row clickable-row" data-href="<%= user_path(user) %>">
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
