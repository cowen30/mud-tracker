<div class="row mt-3 bg-light pt-2">
    <div class="col-12">
        <div class="row">
            <div class="col-12 text-center">
                <h5>Stats</h5>
            </div>
        </div>
        <div class="row px-3">
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <small><strong>Distance:</strong> <%= number_with_precision(@distance, :precision => 0, :delimiter => ',') %> mi.</small>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <small><strong>Elevation:</strong> <%= number_with_precision(@elevation, :precision => 0, :delimiter => ',') %> ft.</small>
            </div>
            <div class="d-none d-sm-block col-sm-4 col-md-3 col-lg-2">
                <small><strong>TM Legionnaire:</strong> <%= @tm_legionnaire %>x</small>
            </div>
            <div class="d-none d-lg-block col-lg-2">
                <small><strong>Volunteer hours:</strong> 0</small>
            </div>
        </div>
        <div id="profile-stats" class="row">
            <div class="col-12 text-center mb-0">
                <div class="collapse" id="collapse-stats">
                </div>
                <button class="btn w-100 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-stats" aria-expanded="false" aria-controls="collapse-stats">
                    <i class="bi bi-chevron-compact-down h3"></i>
                </button>
            </div>
        </div>
    </div>
</div>
